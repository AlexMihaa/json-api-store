{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "ES2015",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "./build",
    "baseUrl": "src",
    "types": [
      "jasmine",
      "node",
      "reflect-metadata"
    ],
    "lib": [
      "es2015",
      "es6",
      "es7",
      "dom"
    ]
  },
  "files": [
    "./src/index.ts"
  ],
  "exclude": ["node_modules"]
}
