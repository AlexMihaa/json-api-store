{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "./release",
    "types": [
      "jasmine",
      "node",
      "reflect-metadata"
    ],
    "lib": [
      "es2015",
      "es6",
      "es7",
      "dom"
    ]
  },
  "files": [
    "./src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "bundles"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true
  }
}