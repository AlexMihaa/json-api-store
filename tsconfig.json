{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2015",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "sourceMap": true,
    "outDir": "./build",
    "types": [
      "jasmine",
      "node",
      "reflect-metadata"
    ],
    "lib": ["es2018", "dom"]
  },
  "files": [
    "./src/index.ts"
  ],
  "exclude": ["node_modules"]
}
